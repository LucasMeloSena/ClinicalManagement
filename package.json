  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "test": "vitest run --dir src/domain/use-cases",
    "test:watch": "vitest --dir src/domain/use-cases",
    "test:coverage": "vitest run --dir src/domain/use-cases --coverage",
    "start:database": "docker compose up -d",
    "build:docker": "sudo docker build --build-arg CLIENT_URL=http://0.0.0.0:3000 --build-arg PORT=3001 --build-arg HOST=0.0.0.0 --build-arg DATABASE_URL=mongodb://host.docker.internal:27017/clinic --build-arg JWT_SECRET=secret --build-arg JWT_EXPIRESIN=1h -t clinic .",
    "start:docker": "yarn start:database && sudo docker run -p 3001:3001 -it clinic"
  },
